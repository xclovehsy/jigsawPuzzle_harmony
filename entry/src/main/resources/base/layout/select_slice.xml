<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="Select">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请选择拼图图案"
        ohos:text_size="30fp">
    </Text>

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="300vp"
        ohos:width="300vp"
        ohos:layout_alignment="horizontal_center"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请选择难度"
        ohos:text_size="30fp">
    </Text>

    <RadioContainer
        ohos:id="$+id:radio_container"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:layout_alignment="horizontal_center">
        <RadioButton
            ohos:id="$+id:radio_button_easy"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="Easy"
            ohos:text_size="14fp"/>
        <RadioButton
            ohos:id="$+id:radio_button_hard"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="Hard"
            ohos:text_size="14fp"/>
    </RadioContainer>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="play"
        ohos:text_size="40fp"
        ohos:id="$+id:btn_play">

    </Button>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="BACK"
        ohos:text_size="40fp"
        ohos:id="$+id:btn_back">
    </Button>



</DirectionalLayout>