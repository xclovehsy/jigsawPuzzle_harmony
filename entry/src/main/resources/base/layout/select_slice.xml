<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请选择拼图图案"
        ohos:text_size="30fp">
    </Text>

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="300vp"
        ohos:width="300vp"
        ohos:layout_alignment="horizontal_center"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="10fp"
        ohos:layout_alignment="horizontal_center">

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="难度选择"
            ohos:id="$+id:selectDiffBtn"
            ohos:text_size="20fp">
        </Button>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="3×3"
            ohos:text_size="20fp"
            ohos:id="$+id:diffText">
        </Text>



    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="10fp"
        ohos:layout_alignment="horizontal_center">
        <Button
            ohos:id="$+id:selectModelBtn"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="模式选择"
            ohos:text_size="20fp">
        </Button>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="经典拼图"
            ohos:text_size="20fp"
            ohos:id="$+id:modelText">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:top_margin="10fp"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:layout_alignment="horizontal_center">

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="返回"
            ohos:text_size="30fp"
            ohos:id="$+id:btn_back">
        </Button>

        <Button
            ohos:left_margin="10fp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="开始游戏"
            ohos:text_size="30fp"
            ohos:id="$+id:btn_play">

        </Button>
    </DirectionalLayout>








</DirectionalLayout>