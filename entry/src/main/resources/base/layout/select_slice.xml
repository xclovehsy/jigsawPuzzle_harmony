<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="Select">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请选择拼图图案"
        ohos:text_size="30fp">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="请选择难度"
        ohos:text_size="30fp">
    </Text>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="play"
        ohos:text_size="40fp"
        ohos:id="$+id:btn_play">

    </Button>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="BACK"
        ohos:text_size="40fp"
        ohos:id="$+id:btn_back">
    </Button>



</DirectionalLayout>