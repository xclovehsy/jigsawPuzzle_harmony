<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical">

    <TickTimer
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:ticktimer"
        ohos:text_size="30fp">
    </TickTimer>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_content">
        <Image
            ohos:id="$+id:blank11"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:margin="1fp"
            ohos:scale_mode="stretch"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank12"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank13"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_content">
        <Image
            ohos:id="$+id:blank21"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank22"
            ohos:height="80fp"
            ohos:scale_mode="stretch"
            ohos:width="80fp"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank23"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_content">
        <Image
            ohos:id="$+id:blank31"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank32"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:scale_mode="stretch"
            ohos:margin="1fp"
            ohos:background_element="$media:question">
        </Image>

        <Image
            ohos:id="$+id:blank33"
            ohos:height="80fp"
            ohos:width="80fp"
            ohos:margin="1fp"
            ohos:scale_mode="stretch"
            ohos:background_element="$media:question">
        </Image>

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:orientation="horizontal"
        ohos:height="match_content"
        ohos:width="match_content">

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:btn_begin"
            ohos:text="开始"
            ohos:margin="10fp"
            ohos:text_size="30fp">
        </Button>

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:btn_end"
            ohos:text="结束"
            ohos:margin="10fp"
            ohos:text_size="30fp">
        </Button>

    </DirectionalLayout>

    <Image
        ohos:id="$+id:img_tip"
        ohos:scale_mode="stretch"
        ohos:height="250fp"
        ohos:width="250fp"
        ohos:margin="10fp"
        ohos:background_element="$media:question">
    </Image>





</DirectionalLayout>
