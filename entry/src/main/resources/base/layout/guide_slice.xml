<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$media:bk3"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="华容道是古老的中国民">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="间益智游戏，以其变化多端、">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="百玩不厌的特点与魔方">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="、独立钻石一起被国外智力专家并称为">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="“智力游戏界的三个不可思议”。">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="它与七巧板、九连环等中国传统">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="益智玩具还有个代名词叫作">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="“中国的难题”。据《资治通鉴》">
    </Text>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20fp"
        ohos:text="注释中说“从此道可至华容也”。">
    </Text>
